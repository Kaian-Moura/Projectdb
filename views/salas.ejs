        color: var(--primary);
        font-size: 18px;
        margin-bottom: 15px;
      }

      .filter-form {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
      }

      .filter-group {
        margin-bottom: 15px;
      }

      .filter-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
        color: var(--secondary);
      }

